<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="20dp" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            android:orientation="vertical" >

           <EditText
        android:id="@+id/job_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/EditText01"
        android:layout_below="@+id/chang"
        android:background="@android:drawable/edit_text"
        android:ems="10"
        android:enabled="true"
        android:gravity="top"
        android:hint="标题"
        android:inputType="textMultiLine"
        android:maxLines="1"
        android:minLines="1"
        android:scrollbars="vertical" />

    <EditText
        android:id="@+id/job_tel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button0"
        android:layout_alignLeft="@+id/button0"
        android:layout_marginBottom="23dp"
        android:background="@android:drawable/edit_text"
        android:ems="10"
        android:enabled="true"
        android:gravity="top"
        android:hint="联系方式"
        android:inputType="textMultiLine"
        android:maxLines="1"
        android:minLines="1"
        android:scrollbars="vertical" />

    <EditText
        android:id="@+id/job_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lost_title"
        android:layout_below="@+id/lost_title"
        android:layout_marginTop="14dp"
        android:background="@android:drawable/edit_text"
        android:ems="10"
        android:enabled="true"
        android:gravity="top"
        android:hint="内容"
        android:inputType="textMultiLine"
        android:maxLines="8"
        android:minLines="6"
        android:scrollbars="vertical" />
        </LinearLayout>

        <Button
            android:id="@+id/job_button1"
            android:layout_width="match_parent"
            android:layout_height="48.0dip"
            android:layout_margin="16dp"
            android:background="@drawable/btn_login_selector"
            android:gravity="center"
            android:text="发布兼职信息"
            android:textColor="#ffff67"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>